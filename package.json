{
  "name": "@activewidgets/vue",
  "version": "0.0.1",
  "description": "Datagrid component for vue.js",
  "author": "webmaster@activewidgets.com",
  "license": "MIT",
  "main": "./index.common.js",
  "module": "./index.esm.js",
  "files": [
    "dist",
    "*.js",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "storybook": "start-storybook -p 9001 -c storybook",
    "storybook:build": "rimraf out/storybook && build-storybook -c storybook -o out/storybook",
    "docs": "gitbook serve docs out/docs",
    "docs:build": "rimraf out/docs && gitbook build docs out/docs",
    "test": "jest"
  },
  "dependencies": {
    "@activewidgets/frameworks": "https://cdn.activewidgets.com/packages/frameworks-0.0.1.tgz",
    "@activewidgets/grid": "https://cdn.activewidgets.com/packages/grid-0.0.1.tgz"
  },
  "devDependencies": {
    "@storybook/vue": "^3.3.13",
    "@vue/test-utils": "^1.0.0-beta.11",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.2.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "gitbook-cli": "^2.3.2",
    "jest": "^22.2.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.3",
    "rollup-plugin-babel": "^3.0.3",
    "vue": "^2.5.13",
    "vue-loader": "^14.1.1",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "env"
    ]
  },
  "jest": {
    "rootDir": "test/unit",
    "moduleNameMapper": {
      "\\.(css|png)$": "<rootDir>/../mocks/files.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activewidgets/vue.git"
  },
  "keywords": [
    "vue"
  ],
  "bugs": {
    "url": "https://github.com/activewidgets/vue/issues"
  },
  "homepage": "https://github.com/activewidgets/vue#readme"
}
